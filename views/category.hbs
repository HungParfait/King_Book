<div class="category-row">
    <div class="filter bg-white col-2 ms-3" id="filter">
        <div class="gia-tien">
            <h5>Giá</h5>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="price" id="flexRadioDefault1">
                <label class="form-check-label" for="flexRadioDefault1">
                    0 - 10
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="price" id="flexRadioDefault2" checked>
                <label class="form-check-label" for="flexRadioDefault2">
                    10 - 20
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="price" id="flexRadioDefault3">
                <label class="form-check-label" for="flexRadioDefault3">
                    20 - 30
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="price" id="flexRadioDefault4" checked>
                <label class="form-check-label" for="flexRadioDefault4">
                    30 - 40
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="price" id="flexRadioDefault5">
                <label class="form-check-label" for="flexRadioDefault5">
                    40 - 50
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="price" id="flexRadioDefault6" checked>
                <label class="form-check-label" for="flexRadioDefault6">
                    60 - 70
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="price" id="flexRadioDefault7">
                <label class="form-check-label" for="flexRadioDefault7">
                    > 70
                </label>
            </div>
        </div>
        <hr>
        <div class="hinh-thuc">
            <h5>Hình thức</h5>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="format" value='Paperback' id="flexRadioDefault8">
                <label class="form-check-label" for="flexRadioDefault8">
                    Bìa Cứng
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="format" value='Hardback' id="flexRadioDefault9" checked>
                <label class="form-check-label" for="flexRadioDefault9">
                    Bìa Mềm
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="format" value='Book' id="flexRadioDefault10">
                <label class="form-check-label" for="flexRadioDefault10">
                    Đóng Hộp
                </label>
            </div>
        </div>
        <hr>
        <div class="ngon-ngu">
            <h5>Ngôn ngữ</h5>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="language" id="flexRadioDefault11" value="en" checked>
                <label class="form-check-label" for="flexRadioDefault11">
                    Tiếng Anh
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="language" id="flexRadioDefault12" value="vi">
                <label class="form-check-label" for="flexRadioDefault12">
                    Tiếng Việt
                </label>
            </div>
        </div>
        <hr>
    </div>
    
    <div class="category bg-white col-10">
        <div id="book-list">
            {{#each categorys}}
            <div class="row-image-2">
                <img class="mem-img-new" src="{{this.image}}">
                <p class="mem-text ten-sach">{{this.name}}</p>
                <div class="mem-text ten-tac-gia">{{this.author}}</div>
                <div class="mem-text hinh-thuc">{{this.format}}</div>
                <span class="mem-info">{{this.price}}</span>
            </div>
            {{/each}}
        </div>

        <div id="pagination">
        </div>

    </div>
</div>